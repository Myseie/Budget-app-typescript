{
  "compilerOptions": {
    "target": "ES6",                                  /* Specify ECMAScript target version. */
    "module": "CommonJS",
    "jsx": "react-jsx",                                /* Specify module code generation. */
    "strict": true,                                      /* Enable all strict type-checking options. */
    "esModuleInterop": true,                             /* Enable import/export interop. */
    "skipLibCheck": true,                                /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true,            /* Ensure consistent casing in imports. */
    "outDir": "./dist",
    "resolveJsonModule": true                                   /* Redirect output to the dist folder. */
  },
  "include": ["src/**/*"],                                /* Include all TypeScript files in src. */
  "exclude": ["node_modules"]                            /* Exclude the node_modules folder. */
}